<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="itemhorizontalthemeinneritem"
            type="com.example.jobplanettest.adapter.model.CELL_TYPE_HORIZONTAL_THEME" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="100dp"
        android:layout_height="240dp"
        android:layout_margin="12dp">

        <ImageView
            android:id="@+id/item_horizontal_theme_inner_item_imageview_cover_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_hotizontal_theme_inner_item_textview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@{itemhorizontalthemeinneritem.title}"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_horizontal_theme_inner_item_imageview_cover_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>