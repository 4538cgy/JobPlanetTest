<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="itemhorizontalthemeinneritem"
            type="com.example.jobplanettest.data.TestDataResponse.Theme" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="100dp"
        android:layout_height="220dp"
        >
        <ImageView
            android:id="@+id/item_horizontal_theme_inner_item_imageview_cover_image"
            android:layout_width="100dp"
            android:layout_height="110dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            app:layout_constraintTop_toBottomOf="@+id/item_horizontal_theme_inner_item_imageview_cover_image"
            android:id="@+id/item_hotizontal_theme_inner_item_textview_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@{itemhorizontalthemeinneritem.title}"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>